# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=sooft_db

# OpenTelemetry - App Configuration
OTEL_SERVICE_NAME=company-service                    # Nombre del servicio en traces
OTEL_RESOURCE_ATTRIBUTES="service.name=company-service,service.namespace=company-service-group,deployment.environment=production"
OTEL_TRACES_EXPORTER=otlp                            # Exportador OTLP
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces  # Alloy local
OTEL_EXPORTER_OTLP_TRACES_PROTOCOL=http/protobuf     # Protocolo binario
OTEL_LOG_LEVEL=debug                                 # Nivel debug para troubleshooting

# Grafana Cloud - Alloy Configuration  
GRAFANA_CLOUD_OTLP_ENDPOINT=https://otlp-gateway-prod-sa-east-1.grafana.net/otlp  # Tempo endpoint
GRAFANA_CLOUD_PROM_RW_ENDPOINT=https://prometheus-prod-XX-XXX.grafana.net/api/prom/push  # Prom Remote Write
GRAFANA_CLOUD_INSTANCE_ID=1234567                    # Tu Instance ID (username para auth)
GRAFANA_CLOUD_API_KEY=glc_xxx...                     # API Key (password, NO base64)

# AWS Configuration
AWS_REGION=us-east-1
COMPANY_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/company-queue

# Tip: Usar dotenv o direnv para cargar variables autom√°ticamente
# Tip: Nunca commitear credenciales reales al repositorio