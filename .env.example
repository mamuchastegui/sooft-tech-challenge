# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (if using real database instead of in-memory)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=sooft_user
# DATABASE_PASSWORD=sooft_password
# DATABASE_NAME=sooft_tech_db

# API Configuration
API_PREFIX=v1

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info

# AWS Configuration (for Lambda deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# DynamoDB Tables (for Lambda)
COMPANIES_TABLE=companies
TRANSFERS_TABLE=transfers

# EventBridge Configuration (for Lambda)
EVENT_BUS_NAME=company-events

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100